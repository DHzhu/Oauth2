<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.ClientDao">
	<resultMap type="com.model.Client" id="client">
		<id property="id" column="id" />
		<result property="clientName" column="clientName" />
		<result property="clientId" column="clientId" />
		<result property="clientKey" column="clientKey" />
	</resultMap>

	<select id="getClients" resultMap="client" parameterType="com.model.Client">
		select * from oauth_client a
		where 1=1
		<if test="id != null">
			AND a.id = ${id}
		</if>
		<if test="clientName != null and clientName != ''">
			AND a.clientName = '${clientName}'
		</if>
		<if test="clientId != null and clientId != ''">
			AND a.clientId = '${clientId}'
		</if>
		<if test="clientKey != null and clientKey != ''">
			AND a.clientKey = '${clientKey}'
		</if>
	</select>

	<insert id="addClient" parameterType="com.model.Client">
		INSERT INTO oauth_client
		(clientName,clientId,clientKey)
		VALUES
		('${clientName}','${clientId}','${clientKey}')
	</insert>

	<delete id="delClient" parameterType="int">
		delete from oauth_client a
		where a.id = ${id}
	</delete>

	<update id="updateClient" parameterType="com.model.Client">
		update oauth_client b
		<set>
			<if test="clientName != null">
				b.clientName = '${clientName}',
			</if>
		</set>
		WHERE b.id = ${id}
	</update>
</mapper>