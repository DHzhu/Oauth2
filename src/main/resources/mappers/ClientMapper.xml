<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.ClientDao">
	<resultMap type="com.model.Client" id="client">
		<id property="id" column="id" />
		<result property="clientName" column="client_name" />
		<result property="clientId" column="client_id" />
		<result property="clientSecret" column="client_secret" />
	</resultMap>

	<select id="getClients" resultMap="client" parameterType="com.model.Client">
		select * from oauth_client a
		where 1=1
		<if test="id != null and id > 0">
			AND a.id = ${id}
		</if>
		<if test="clientName != null and clientName != ''">
			AND a.client_name = '${clientName}'
		</if>
		<if test="clientId != null and clientId != ''">
			AND a.client_id = '${clientId}'
		</if>
		<if test="clientSecret != null and clientSecret != ''">
			AND a.client_secret = '${clientSecret}'
		</if>
	</select>

	<insert id="addClient" parameterType="com.model.Client">
		INSERT INTO oauth_client
		(client_name,client_id,client_secret)
		VALUES
		('${clientName}','${clientId}','${clientSecret}')
	</insert>

	<delete id="delClient" parameterType="int">
		delete from oauth_client a
		where a.id = ${id}
	</delete>

	<update id="updateClient" parameterType="com.model.Client">
		update oauth_client b
		<set>
			<if test="clientName != null">
				b.client_name = '${clientName}',
			</if>
		</set>
		WHERE b.id = ${id}
	</update>
</mapper>